<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_workout_tracker"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.tpl.fitnesszone.activity.WorkoutTrackerActivity">

    <!--Toolbar / ActionBar-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/fz_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <Button
        android:id="@+id/date_button"
        android:text="@string/date_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/fz_toolbar"
        android:onClick="showDatePickerDialog" />

    <!--User Weight Title-->
    <TextView
        android:id="@+id/starting_weight_title"
        android:text="@string/weight_current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingLeft="3dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/date_button" />

    <!--User Weight-->
    <EditText
        android:id="@+id/user_starting_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingLeft="3dp"
        android:layout_below="@id/date_button"
        android:layout_toRightOf="@id/starting_weight_title"
        android:layout_alignBottom="@id/starting_weight_title"
        android:inputType="number"
        android:ems="3" />

    <!--Weight Label-->
    <TextView
        android:id="@+id/starting_weight_label"
        android:text="@string/lbs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_below="@id/date_button"
        android:layout_toRightOf="@id/user_starting_weight"
        android:layout_alignBottom="@id/user_starting_weight" />

    <TextView
        android:id="@+id/todays_focus"
        android:text="@string/todays_focus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingLeft="3dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/starting_weight_title" />

    <CheckBox
        android:id="@+id/arms"
        android:text="@string/arms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_below="@id/starting_weight_title"
        android:layout_toRightOf="@id/todays_focus"
        android:layout_alignBaseline="@id/todays_focus"
        android:onClick="onCheckboxClicked" />

    <CheckBox
        android:id="@+id/legs"
        android:text="@string/legs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_below="@id/starting_weight_title"
        android:layout_toRightOf="@id/arms"
        android:layout_alignBaseline="@id/todays_focus"
        android:onClick="onCheckboxClicked" />

    <CheckBox
        android:id="@+id/cardio"
        android:text="@string/cardio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_below="@id/starting_weight_title"
        android:layout_toRightOf="@id/legs"
        android:layout_alignBaseline="@id/todays_focus"
        android:onClick="onCheckboxClicked" />

    <TableLayout
        android:id="@+id/workout_tracker_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/todays_focus"
        android:stretchColumns="1">

        <!--Workout Tracker Table Labels-->
        <TableRow
            android:weightSum="1">
            <TextView
                android:id="@+id/exercise_label"
                android:text="@string/choose_an_exercise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:layout_span="2"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/reps_set1_label"
                android:text="@string/reps_set1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"/>
            <TextView
                android:id="@+id/reps_set2_label"
                android:text="@string/reps_set2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"/>
            <TextView
                android:id="@+id/reps_set3_label"
                android:text="@string/reps_set3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"/>
            <TextView
                android:id="@+id/cardio_label"
                android:text="@string/cardio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"/>
        </TableRow>

        <!--Workout Tracker Table Inputs 1-->
        <TableRow
            android:weightSum="1">
            <Spinner
                android:id="@+id/exercise_spinner1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:layout_span="2" />
            <EditText
                android:id="@+id/reps_set1_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:padding="3dp"
                android:ems="3"/>
            <EditText
                android:id="@+id/reps_set2_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:padding="3dp"
                android:ems="3"/>
            <EditText
                android:id="@+id/reps_set3_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:padding="3dp"
                android:ems="3"/>
            <EditText
                android:id="@+id/cardio_time_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:padding="3dp"/>
        </TableRow>

        <!--Workout Tracker Table Inputs 2-->
        <TableRow
            android:weightSum="1">
            <Spinner
                android:id="@+id/exercise_spinner2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:layout_span="2"/>
            <EditText
                android:id="@+id/reps_set1_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:padding="3dp"
                android:ems="3"/>
            <EditText
                android:id="@+id/reps_set2_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:padding="3dp"
                android:ems="3"/>
            <EditText
                android:id="@+id/reps_set3_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:padding="3dp"
                android:ems="3"/>
            <EditText
                android:id="@+id/cardio_time_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:padding="3dp"/>
        </TableRow>

        <!--Workout Tracker Table Inputs 3-->
        <TableRow
            android:weightSum="1">
            <Spinner
                android:id="@+id/exercise_spinner3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:layout_span="2"/>
            <EditText
                android:id="@+id/reps_set1_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:padding="3dp"
                android:ems="3"/>
            <EditText
                android:id="@+id/reps_set2_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:padding="3dp"
                android:ems="3"/>
            <EditText
                android:id="@+id/reps_set3_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:padding="3dp"
                android:ems="3"/>
            <EditText
                android:id="@+id/cardio_time_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:padding="3dp"/>
        </TableRow>

        <!--Workout Tracker Table Inputs 4-->
        <TableRow
            android:weightSum="1">
            <Spinner
                android:id="@+id/exercise_spinner4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:layout_span="2"/>
            <EditText
                android:id="@+id/reps_set1_text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:padding="3dp"
                android:ems="3"/>
            <EditText
                android:id="@+id/reps_set2_text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:padding="3dp"
                android:ems="3"/>
            <EditText
                android:id="@+id/reps_set3_text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:padding="3dp"
                android:ems="3"/>
            <EditText
                android:id="@+id/cardio_time_text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:padding="3dp"/>
        </TableRow>

        <!--Workout Tracker Table Inputs 5-->
        <TableRow
            android:weightSum="1">
            <Spinner
                android:id="@+id/exercise_spinner5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:layout_span="2"/>
            <EditText
                android:id="@+id/reps_set1_text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:padding="3dp"
                android:ems="3"/>
            <EditText
                android:id="@+id/reps_set2_text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:padding="3dp"
                android:ems="3"/>
            <EditText
                android:id="@+id/reps_set3_text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:padding="3dp"
                android:ems="3"/>
            <EditText
                android:id="@+id/cardio_time_text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:padding="3dp"/>
        </TableRow>

    </TableLayout>

    <!--Save Button-->
    <Button
        android:id="@+id/save_button_workout_tracker"
        android:text="@string/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:padding="12dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:onClick="saveWorkoutTrackerInfo" />

</RelativeLayout>

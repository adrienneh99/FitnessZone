<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_fitness_journal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.tpl.fitnesszone.activity.FitnessJournalActivity">

    <!--Toolbar / ActionBar-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/fz_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <!--My Fitness Goal Title-->
    <TextView
        android:id="@+id/my_fitness_goal_title"
        android:text="@string/my_fitness_goal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/fz_toolbar"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp" />

    <!--User Goal-->
    <EditText
        android:id="@+id/user_goal_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/my_fitness_goal_title"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:paddingBottom="16dp"
        android:inputType="textMultiLine"
        android:ems="50" />

    <!--User Weight Title-->
    <TextView
        android:id="@+id/user_weight_title"
        android:text="@string/weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/user_goal_edit_text"
        android:layout_marginLeft="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp" />

    <!--User Weight-->
    <EditText
        android:id="@+id/user_weight_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_goal_edit_text"
        android:layout_toRightOf="@id/user_weight_title"
        android:layout_alignBottom="@id/user_weight_title"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:inputType="number"
        android:ems="3" />

    <!--Weight Label-->
    <TextView
        android:id="@+id/user_weight_label"
        android:text="@string/lbs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_goal_edit_text"
        android:layout_toRightOf="@id/user_weight_edit_text"
        android:layout_alignBottom="@id/user_weight_edit_text"
        android:paddingTop="16dp"
        android:paddingBottom="16dp" />

    <!--Divider-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FF909090" />

    <!--User Progress Title-->
    <TextView
        android:id="@+id/user_progress_title"
        android:text="@string/my_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/user_weight_label"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!--Number of Workouts Tracked Label-->
    <TextView
        android:id="@+id/number_of_workouts_tracked_label"
        android:text="@string/number_of_workouts_tracked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_alignParentLeft="true"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_below="@id/user_progress_title" />

    <!--Number of Workouts Tracked-->
    <EditText
        android:id="@+id/number_of_workouts_tracked_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_below="@id/user_progress_title"
        android:layout_alignBottom="@id/number_of_workouts_tracked_label"
        android:layout_toRightOf="@id/number_of_workouts_tracked_label"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:inputType="number"
        android:ems="3" />

    <!--Recent Activity Title-->
    <TextView
        android:id="@+id/recent_activity"
        android:text="@string/recent_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/number_of_workouts_tracked_edit_text"
        android:paddingTop="16dp"
        android:paddingBottom="16dp" />

</RelativeLayout>

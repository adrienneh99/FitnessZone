<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_equipment_exercise_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.tpl.fitnesszone.activity.EquipmentExerciseDetailActivity">

    <!--Toolbar / ActionBar-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/fz_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--Exercise Name-->
            <TextView
                android:id="@+id/exercise_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!--Exercise Equipment Image-->
            <ImageView
                android:id="@+id/equipment_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/exercise_name"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />

            <!--Activity Type Label-->
            <TextView
                android:id="@+id/activity_type_label"
                android:text="@string/type_of_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/equipment_image"
                android:layout_marginLeft="16dp"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!--Exercise Activity Type-->
            <TextView
                android:id="@+id/exercise_activity_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/activity_type_label"
                android:layout_toRightOf="@id/activity_type_label"
                android:layout_below="@id/equipment_image"
                android:layout_marginRight="16dp"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!--Exercise Activity Type Detail-->
            <TextView
                android:id="@+id/exercise_activity_type_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/activity_type_label"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp" />

            <!--Muscles Used Label-->
            <TextView
                android:id="@+id/muscles_used_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/exercise_activity_type_detail"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!--Muscles Used Detail-->
            <TextView
                android:id="@+id/muscles_used_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/muscles_used_label"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp" />

            <!--Health Benefits Label-->
            <TextView
                android:id="@+id/health_benefits_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/muscles_used_detail"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!--Health Benefits Detail-->
            <TextView
                android:id="@+id/health_benefits_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/health_benefits_label"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp" />

            <!--Instructions Label-->
            <TextView
                android:id="@+id/instructions_label"
                android:text="@string/instructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/health_benefits_detail"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!--Instructions Detail-->
            <TextView
                android:id="@+id/instructions_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/instructions_label"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp" />

            <!--Exercise Tips Label-->
            <TextView
                android:id="@+id/exercise_tips_label"
                android:text="@string/exercise_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/instructions_detail"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!--Exercise Tips Detail-->
            <TextView
                android:id="@+id/exercise_tips_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/exercise_tips_label"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp" />

        </RelativeLayout>

    </ScrollView>

</LinearLayout>



<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="org.tpl.fitnesszone.activity.EquipmentExerciseListActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/equipment_benefits_cardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="8dp"
        card_view:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/equipment_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="16dp"
                android:paddingTop="16dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/exercise_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/equipment_image"
                android:layout_alignParentTop="true"
                android:layout_marginRight="8dp"
                android:paddingTop="16dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/activity_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/equipment_image"
                android:layout_below="@id/exercise_name"
                android:layout_alignLeft="@id/exercise_name"
                android:layout_marginRight="8dp"
                android:paddingBottom="16dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:textSize="14sp" />

            <Button
                android:id="@+id/learn_more_button"
                android:text="@string/learn_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="16dp"
                android:padding="8dp"
                android:onClick="openEquipmentExerciseUI"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>



<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_health_benefits"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.tpl.fitnesszone.HealthBenefitsActivity">

    <!--Toolbar / ActionBar-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/fz_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <!--Get Active Title-->
    <TextView
        android:id="@+id/get_active_title"
        android:text="@string/get_active"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_below="@id/fz_toolbar"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp" />

    <!--Get Active Text-->
    <TextView
        android:id="@+id/get_active_text"
        android:text="@string/get_active_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/get_active_title"
        android:layout_alignLeft="@id/get_active_title" />

    <!--Before You Start Title-->
    <TextView
        android:id="@+id/before_you_start_title"
        android:text="@string/before_you_start_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_below="@id/get_active_text"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp" />

    <!--Before You Start Text-->
    <TextView
        android:id="@+id/before_you_start_text"
        android:text="@string/before_you_start_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/before_you_start_title"
        android:layout_alignLeft="@id/before_you_start_title" />

        <!--Complete Exercise Program Title-->
    <TextView
        android:id="@+id/complete_exercise_program"
        android:text="@string/complete_exercise_program"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_below="@id/before_you_start_text"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/complete_exercise_program"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp">

        <!--Cardio, Strength Bldg, and Stretching Icons/Images-->
        <TableRow
            android:weightSum="1">
            <ImageView
                android:id="@+id/ic_workout_cardio"
                android:src="@drawable/ic_workout_cardio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_weight=".3"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:padding="3dp"/>
            <ImageView
                android:id="@+id/ic_workout_arm"
                android:src="@drawable/ic_workout_arm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_weight=".3"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:padding="3dp"/>
            <ImageView
                android:id="@+id/ic_workout_leg"
                android:src="@drawable/ic_workout_leg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_weight=".3"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:padding="3dp"/>
        </TableRow>

        <!--Cardio, Strength Bldg, and Stretching Titles-->
        <TableRow
            android:weightSum="1"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/aerobic_exercise"
                android:text="@string/aerobic_exercise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_weight=".3"
                android:padding="3dp"/>
            <TextView
                android:id="@+id/strength_building"
                android:text="@string/strength_building"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_weight=".3"
                android:padding="3dp"/>
            <TextView
                android:id="@+id/stretching"
                android:text="@string/stretching"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_weight=".3"
                android:padding="3dp"/>
        </TableRow>

        <!--Cardio, Strength Bldg, and Stretching Durations-->
        <TableRow
            android:weightSum="1"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/aerobic_exercise_duration"
                android:text="@string/aerobic_exercise_duration"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_weight=".3"
                android:padding="3dp"/>
            <TextView
                android:id="@+id/strength_building_duration"
                android:text="@string/strength_building_duration"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_weight=".3"
                android:padding="3dp"/>
            <TextView
                android:id="@+id/stretching_duration"
                android:text="@string/stretching_duration"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_weight=".3"
                android:padding="3dp"/>
        </TableRow>

        <!--Cardio, Strength Bldg, and Stretching Text-->
        <TableRow
            android:weightSum="1"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/aerobic_exercise_text"
                android:text="@string/aerobic_exercise_text"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_weight=".3"
                android:padding="3dp"/>
            <TextView
                android:id="@+id/strength_building_text"
                android:text="@string/strength_building_text"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_weight=".3"
                android:padding="3dp"/>
            <TextView
                android:id="@+id/stretching_text"
                android:text="@string/stretching_text"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_weight=".3"
                android:padding="3dp"/>
        </TableRow>

    </TableLayout>

    <!--Fitness Equipment Icon-->
    <ImageView
        android:id="@+id/ic_fitness_equipment"
        android:src="@drawable/ic_fitness_equipment_50x34"
        android:background="#00000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:maxWidth="120dp"
        android:layout_below="@id/complete_exercise_program"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

    <!--Fitness Equipment Button-->
    <Button
        android:id="@+id/fitness_equipment_benefits_button"
        android:text="@string/fitness_equipment_benefits_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_below="@id/complete_exercise_program"
        android:layout_toRightOf="@id/ic_fitness_equipment"
        android:layout_toEndOf="@id/ic_fitness_equipment"
        android:textSize="12sp" />




</RelativeLayout>
